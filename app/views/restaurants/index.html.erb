<% if @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>
    <h2> <%= link_to restaurant.name, restaurant_path(restaurant) %> | <%= restaurant.description %></h2>
    <p><%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %> | <%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %>
    | <%= link_to "Rate #{restaurant.name}", new_restaurant_review_path(restaurant) %></p>
  <% end %>
<% else %>
  No restaurants yet!
<% end %>

<br>

<a href='/restaurants/new'>Add a restaurant</a>
