<% if @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>
    <h2> <%= link_to restaurant.name, restaurant_path(restaurant) %> | <%=restaurant.description%><%=restaurant.reviews.map{|x| x[:thoughts]}%>
  </h2>
    <%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %> | <%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %>
    <%= link_to "Rate #{restaurant.name}", new_restaurant_review_path(restaurant) %>
  <% end %>
<% else %>
  No restaurants yet
  !
<% end %>

<a href='/restaurants/new'>Add a restaurant</a>
