<% if @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>
    <h2> <%= link_to restaurant.name, restaurant_path(restaurant) %> <%=restaurant.description%></h2>
    <%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %>
  <% end %>
<% else %>
  No restaurants yet
  !
<% end %>

